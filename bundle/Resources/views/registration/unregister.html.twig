{% trans_default_domain "ezmailing" %}
{% extends '@ezdesign/full/generic.html.twig' %}

{% set title = "form.mailinglists.unregister"|trans %}

{% block content_after %}
    {% if form is defined %}
        {% form_theme form with ['@ezdesign/content/form_fields.html.twig', _self ] %}

        {{ form_start(form) }}
        {{ form_row(form.user) }}
        {{ form_row(form.mailingLists) }}
        <input type="submit" value="{{ "form.unregister"|trans }}" name="Unregister" class="btn no-underline btn--base w-full md:w-auto btn--default"/>
        {{ form_end(form) }}
    {% else %}
        {% import '@core/_components.html.twig' as components %}
        {{
            components.alert({
                content: "register.unregister.confirmation_email_message"|trans,
                statut: "neutral",
                icon: ''
            })
        }}
    {% endif %}
{% endblock %}
