{% trans_default_domain "ezmailing" %}
{% extends '@ezdesign/full/generic.html.twig' %}

{% set title = "form.mailinglists"|trans %}

{% block content_after %}
    {% import '@core/_components.html.twig' as components %}
    {% if isConfirmed %}
        {{
            components.alert({
                content: "register.register.confirmation"|trans,
                statut: "success",
                icon: ''
            })
        }}
    {% else %}
        {{
            components.alert({
                content: "register.register.failed"|trans,
                statut: "alert",
                icon: ''
            })
        }}
    {% endif %}
{% endblock %}
