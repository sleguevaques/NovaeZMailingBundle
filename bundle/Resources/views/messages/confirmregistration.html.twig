{% trans_default_domain "ezmailing" %}
{% extends "@ezdesign/mailing_base.html.twig" %}

{% block unregister %}{% endblock %}

{% block body %}
    <h2>{{ "messages.confirm_registration.confirm"|trans }}</h2>

    <p>{{ "messages.confirm_registration.confirm_process1"|trans }}</p>

    {% if registration.mailingLists|length > 1 %}
        <ul>
            {% for mailinglist in registration.mailingLists %}
                <li>{{ mailinglist.name }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <p><a href="{{ url('novaezmailing_registration_confirm', {id:token.id}) }}">{{ "messages.confirm_registration.confirm_process2"|trans }}</a></p>
{% endblock %}
